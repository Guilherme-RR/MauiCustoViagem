<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCustoViagem.MainPage">

    <ScrollView>
        <StackLayout>
            <Label Text="Origem: "/>
            <Entry x:Name="txt_origem"/>

            <Label Text="Destino" />
            <Entry BindingContext="destino" x:Name="txt_destino"/>

            <Label Text="Rendimento"/>
            <Entry BindingContext="rendimento" x:Name="txt_rendimento"/>

            <Label Text="Combustível" />
            <Entry BindingContext="valor_combustivel" x:Name="txt_combustivel"/>

            <Button Margin="5" x:Name="btn_criarPedagio" Text="Adicionar pedágio" Clicked="btn_criarPedagio_Clicked"/>
            <Button Margin="5" x:Name="btn_ListaPedagio" Text="Lista de Pedágio" Clicked="btn_ListaPedagio_Clicked"/>
            <Button Margin="5" x:Name="btn_calcular" Text="Calcular" Clicked="btn_calcular_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
